{
  "name": "line-chat-statistics",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "ng": "ng",
    "start": "ng serve",
    "start:ja": "ng serve --configuration=ja",
    "build": "ng build --prod",
    "build:ja": "ng build --configuration=production-ja",
    "deploy": "npm run deploy:build && npm run deploy:ngh",
    "deploy:build": "npm run deploy:build:en && npm run deploy:build:ja",
    "deploy:build:en": "ng build --prod --base-href=https://dricholm.github.io/line-chat-statistics/en/",
    "deploy:build:ja": "ng build --prod --base-href=https://dricholm.github.io/line-chat-statistics/ja/ --configuration=production-ja",
    "deploy:ngh": "ngh --no-silent",
    "test": "ng test --watch",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "coverage": "ng test --watch=false --code-coverage",
    "extract": "ng xi18n --output-path=locale"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.0",
    "@angular/common": "6.0.0",
    "@angular/compiler": "6.0.0",
    "@angular/core": "6.0.0",
    "@angular/forms": "6.0.0",
    "@angular/http": "6.0.0",
    "@angular/platform-browser": "6.0.0",
    "@angular/platform-browser-dynamic": "6.0.0",
    "@angular/router": "6.0.0",
    "@swimlane/ngx-charts": "^8.0.0",
    "angular-date-value-accessor": "0.0.2",
    "core-js": "^2.4.1",
    "d3": "^5.1.0",
    "ngx-page-scroll": "^4.0.2",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.0",
    "@angular/cli": "6.0.0",
    "@angular/compiler-cli": "6.0.0",
    "@angular/language-service": "6.0.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "bootstrap": "^4.1.1",
    "codelyzer": "^4.0.1",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "line-chat-parser": "^1.1.0",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1",
    "protractor": "~5.1.2",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-order": "^0.8.1",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "2.7.2"
  },
  "lint-staged": {
    "src/**/*.{css,json,scss,ts}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "src/**/*.ts": [
      "npm run lint"
    ]
  }
}
